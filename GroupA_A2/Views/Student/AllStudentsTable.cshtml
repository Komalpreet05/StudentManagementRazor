@model IEnumerable<GroupA_A2.Models.Student>

@{
    ViewBag.Title = "AllStudentsTable";
}
<style>
    .btn-info {
        color: #fff;
        background-color: #1da81b;
        border-color: #1da81b;
    }

    button#btn a {
        text-decoration: none;
        color: white;
        font-size: 22px;
    }
    thead.check {
        background: burlywood;
    }

    .btn-info:hover {
        color: #fff;
        background-color: springgreen;
        border-color: springgreen;
    }

    td {
        font-size: 15px;
    }

    th {
        font-size: 16px;
    }
</style>
<div class="container-fluid body-content">
    <h2 id="head1">All Students</h2>
    <h4 id="head2"><button type="button" class="btn btn-info" id="btn">@Html.ActionLink("Grid View", "AllStudents", "Student")</button></h4>

    <table class="table">
        <thead class="check">
            <tr>
                <th>
                    Profile
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Province)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.allPrograms.ProgramName)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@Html.DisplayFor(x => item.Image)" height="50" width="50" alt="Profile">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.allPrograms.ProgramName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStudent", new { id = item.StudentID })
                    @Html.ActionLink("View", "ViewStudent", new { id = item.StudentID })

                </td>
            </tr>
        }

    </table>
    </div>